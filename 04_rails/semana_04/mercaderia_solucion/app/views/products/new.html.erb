<h1>Products#new</h1>
<p>Find me in app/views/products/new.html.erb</p>

<%= form_with(model: @product, url: products_new_path, class: 'form') do |form| %>

  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :descripcion %>
    <%= form.text_field :descripcion, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :codigo_de_barra %>
    <%= form.text_field :codigo_de_barra, class:"form-control" %>
  </div>


  <%= form.submit class: "btn btn-primary my-3" %>
<% end %>
