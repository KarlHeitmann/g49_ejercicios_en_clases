<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @movie.name %>
</p>
<p>
  <h1>GÃ©neros</h1>
  <ul>
    <% @movie.category_movies.each do |category_movie| %>
      <li>
        <%= category_movie.category.name %>
        <% if category_movie.percentage.blank? %>
          <strong>Sin porcentaje de categoria</strong>
          <%= form_tag(cm_add_percentage_path(category_movie)) do %>
            <div class="field">
              <%= label_tag 'percentage', 'Porcentaje' %>
              <%= text_field_tag 'percentage' %>
            </div>
            <div class="field">
              <%= submit_tag 'Enviar' %>
            </div>
          <% end %>
        <% else %>
          <%= category_movie.percentage %>
        <% end %>
      </li>
    <% end %>
  </ul>
</p>

